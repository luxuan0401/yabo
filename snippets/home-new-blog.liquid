{% unless settings.homepage_blog == blank or settings.homepage_blog.empty? %}
{% assign blog = blogs[settings.homepage_blog] %}
<div class="homepage-page {{ settings.homepage_blog_color }}">
  <div class="wrapper">
    <div class="grid-uniform">
        {% unless settings.homepage_blog_subtitle == '' %}
          <div class="grid__item one-whole">
            <h4 class="home__subtitle">{{ settings.homepage_blog_subtitle}}</h4>
          </div>
        {% endunless %}
        <div class="home-module-inline-items home-blog-container">
          {% for article in blog.articles limit:3 %}
			<div class="home-blog-post">
	           <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
	           <div class="home-blog-post-excerpt rte">
	               <p><img src="{{ article.image | img_url: 'grande' }}"></p>
					<p>{{ article.content | strip_html | truncate: 70 }}</p>
	             <p class="meta"><a href="{{ article.url }}">Read more</a></p>
	           </div>
	         </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endunless %}
